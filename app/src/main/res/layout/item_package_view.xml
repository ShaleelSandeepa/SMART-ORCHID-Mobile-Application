<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/packageCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:padding="0dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/DarkRose"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rounded_outline"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/packageName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:scaleType="centerCrop"
                    android:text="Anytime"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/packagePrice"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:scaleType="centerCrop"
                    android:text="Rs. 77"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/packageValidity"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:scaleType="centerCrop"
                    android:text="7 days (one time)"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/packageIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_anytime" />

            <TextView
                android:id="@+id/packageInfo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:scaleType="centerCrop"
                android:text="0.7 GB"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>